<!-- renders a series of empty input boxes for a trip item, setting any already-existing data as the default values -->
<input class = "item-title" value = "{{title}}">
<input class = "item-link" value = "{{link}}">
<input class = "item-image" value = "{{image}}" placeholder = "THIS WILL BE REPLACED WITH SELECTING A FILE TO UPLOAD VIA MULTER">
<input class = "item-date-time item-start-date" value = "{{startDate}}">
<input class = "item-date-time item-start-time" value = "{{startTime}}">
<input class = "item-date-time item-end-date" value = "{{endDate}}">
<input class = "item-date-time item-end-time" value = "{{endTime}}">
<input class = "item-price" value = "{{price}}">
<input class = "item-notes" value = "{{notes}}">