<a href="/trips/view/{{id}}" class="card-link" >
  <div class="card" style = "background-image: url('/images/multer-uploads/{{image}}'); background-size: cover; background-position: center;">
    <div class="card-inner">
    {{#if title}}
      <p class="text-primary font-weight-bold" {{#if image}}style = "color: #FFFFFF; background-color: #505672; padding: 2px 5px; border-radius: 5px;"{{/if}}>{{title}}</p>
      {{else}}
      <p class="text-primary font-weight-bold" {{#if image}}style = "color: #FFFFFF; background-color: #505672; padding: 2px 5px; border-radius: 5px;"{{/if}}>Untitled Trip</p>
    {{/if}}
    </div>
    {{#if start_date}}
      <div class = "date-container">
        <p class="text-secondary" {{#if image}}style = "color: #FFFFFF; background-color: #505672; padding: 2px 5px; border-radius: 5px;"{{/if}}>{{start_date}}</p>
      </div>
    {{/if}}
  </div>
</a>