            {{> edit-item-details}}

            <h4>Choose an Image (up to 10 MB):</h4>
            <input type = "file" accept = "image/*" class = "user-uploaded-image" id = "fileInputMisc{{@../index}}{{@index}}" style = "display: none;">
            <label for = "fileInputMisc{{@../index}}{{@index}}" class = "custom-file-upload">Choose File</label>

            {{> edit-item-image-container}}
            
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>