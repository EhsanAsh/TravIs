<div class = "itinerary-item-container" data-id = {{id}}>
  <!-- if the item has a title attached, render it to the page -->
  {{#if title}}
    <!-- if the title has a link attached, apply it to the header -->
    {{#if link}}
      <h4 class = "item-title"><a href = {{link}}>{{title}}</a></h4>
    {{else}} <!-- otherwise, simply render the title header -->
      <h4 class = "item-title">{{title}}</h4>
    {{/if}}
  {{/if}}

  <!-- if the item has a start date attached, render it to the page -->
  {{#if start_date}}
    <div class="item-detail">
      
      <h4>Start Date:</h4>
      <p class = "item-date-time">{{start_date}}</p>
    
    </div>
  {{/if}}

  <!-- if the item has a start time attached, render it to the page -->
  {{#if start_time}}
    <div class="item-detail">
      
      <h4>Start Time:</h4>
      <p class = "item-date-time">{{start_time}}</p>
    
    </div>
  {{/if}}

  <!-- if the item has an end date attached, render it to the page -->
  {{#if end_date}}
    <div class="item-detail">
      
      <h4>End Date:</h4>
      <p class = "item-date-time">{{end_date}}</p>
    
    </div>
  {{/if}}

  <!-- if the item has an end time attached, render it to the page -->
  {{#if end_time}}
    <div class="item-detail">
      
      <h4>End Time:</h4>
      <p class = "item-date-time">{{end_time}}</p>
    
    </div>
  {{/if}}

  <!-- if the item has a price attached, render it to the page -->
  {{#if expense}}
    <div class="item-detail">
      
      <h4>Cost:</h4>
      <p class = "item-expense">{{expense}}</p>
      
    </div>
  {{/if}}
  

  <!-- if the item has any notes attached, render them to the page -->
  {{#if notes}} 
    <div class="item-detail">
      
      <h4>Notes:</h4>
      <p class = "item-notes">{{notes}}</p>
    
    </div>
  {{/if}}
  
  <!-- if the item has an image attached, render it to the page -->
  {{#if image}}
    <img class = "item-image" src = "/images/multer-uploads/{{image}}">
  {{/if}}
</div>
