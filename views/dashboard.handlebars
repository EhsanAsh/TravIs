<div class="grid-container">
    {{> dashHeader}}
    {{> dashSide}}
    <main class="main-container">
    <div class="main-title">
        <p class="font-weight-bold">TRIPS</p>
    </div>

    <div class="main-cards">
      <!-- renders a 'card' partial for each trip -->
      {{#each trips as |trip|}}
        {{> dashTripCard}}
      {{/each}}

      <div class="card add-card">
        <div class="card-inner">
          <p class="text-primary font-weight-bold">+</p>
        </div>
        <p class="text-secondary">Add New Trip</p>
      </div>
    </div>
</main>

</div>

<script src="/js/dashboard-card.js"></script>
